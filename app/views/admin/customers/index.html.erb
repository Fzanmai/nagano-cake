<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <div class="col-md-12">
     <h4>会員一覧</h4>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</tag>
            <th colspan="3"></th>
          </tr>
       </thead>
       <tbody>
         <% @customers.each do |customer| %>
           <tr>
             <td><%= customer.id %></td>
             <td><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id) %></td>
             <td><%= customer.email %></td>
             <td>
               <% if customer.is_deleted? %>
               <span class="text-active">退会</span>
               <% else %>
               <span class="text-invalid text-success">有効</span>
               <% end %>
             </td>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>