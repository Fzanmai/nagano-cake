<h4 class = "mt-5 ml-3">会員詳細</h4>
 <div class="col-5 ml-3">
      <h5>登録情報</h5>
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <td>会員ID</td>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <td>氏名</td>
                    <td><%= @customer.last_name %><%= @customer.first_name %></td>
                </tr>
                <tr>
                    <td>フリガナ</td>
                    <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= @customer.post_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= @customer.address %></td>
                </tr>
                <tr>
                    <td>電話番号</td>
                    <td><%= @customer.phone_number %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                    <td>会員ステータス</td>
                    <td>
                      <% if @customer.is_deleted? %>
                        <span class="text-active">退会</span>
                      <% else %>
                        <span class="text-invalid text-success">有効</span>
                       <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
  </div>
  <div class = "ml-3">
    <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
    <%= link_to '注文履歴一覧を見る', orders_path(@customer), class: "btn btn-sm btn-info" %>
  </div>
