<h4>登録情報</h4>
  <div>
    会員ID<%= @customer.id %>
  </div>
  <div>
    氏名<%= @customer.last_name %><%= @customer.first_name %>
  </div>
  <div>
    フリガナ<%= @customer.last_name_kana %><%= @customer.first_name_kana %>
  </div>
  <div>
    郵便番号<%= @customer.post_code %>
  </div>
  <div>
    住所<%= @customer.address %>
  </div>
  <div>
    電話番号<%= @customer.phone_number %>
  </div>
  <div>
    メールアドレス<%= @customer.email %>
  </div>
  <div>
    会員ステータス
  </div>
  <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success" %>
  <%= link_to '注文履歴一覧を見る', orders_path(@customer), class: "btn btn-sm btn-info" %>

