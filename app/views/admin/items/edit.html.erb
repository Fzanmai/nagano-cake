 <h2>商品編集</h2>

 <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

 <table class="table">
 <tr><th>商品画像</th><td><%= f.file_field :item_image, accept: "image/*" %></td></tr>

 <tr><th>商品名</th><td><%= f.text_field :name, placefolder: "商品名" %></td></tr>

 <tr><th>商品説明</th><td><%= f.text_area :introduction, placefolder: "ここに説明文を記述します" %></td></tr>

 <tr><th>ジャンル</th><td><%= f.collection_select(:item_genre_id, @item_genres, :id, :name) %></td></tr>

 <tr><th>税抜価格</th><td><%= f.text_field :price %>円</td></tr>

 <tr><th>販売ステータス</th>
  <td>
<%= f.radio_button :is_active, true %>
<%= f.label :is_active, "販売中", class: "text-active" %>
<%= f.radio_button :is_active, false %>
<%= f.label :is_active, "販売停止中", class: "text-invalid" %>
  </td>
 </tr>
</table>

<%= link_to "Destroy", admin_item_path(@item),method: :delete,"data-confirm"=>"Are you sure?" ,class:"btn btn-danger" %>

<%= f.submit "Create", class: "btn btn-success" %>

<% end %>

