
<p id="notice"></p>
<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-11 px-11 px-sm-0 mx-auto">
  <h2>商品一覧
    <%= link_to new_admin_item_path(@item.id) do %>
     <i class="fas fa-plus-circle" style="color: black;"></i>
   <% end %>
  </h2>

  <table class = "table">
   <thead>
    <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
   </thead>

   <tbody>
      <% @items.each do |item| %>
       <tr>
       	<td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.item_genre.name %></td>
        <td><% if item.is_active? %>
　　　　<span class="text-active">販売中</span>
　　　　<% else %>
　　　　<span class="text-invalid">販売停止中</span>
　　　　<% end %></td>
       <% end %>
   </tbody>
  </table>

<div class="col-sm-3 mx-auto my-5" >
 <%= paginate @items %>
</div>
</div>
</div>
</div>

