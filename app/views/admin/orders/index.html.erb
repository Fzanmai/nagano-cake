<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">

      <h2>注文履歴詳細</h2>

      <table class="table">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <a href="/admin/orders/<%= order.id %>"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></a>
          </td>
          <td><%= order.customer.first_name %></td>
          <td>例：注文個数</td>
          <td><%= order.production_status %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>