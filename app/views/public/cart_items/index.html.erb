<div class='container'>
  <div class "row">
    <div class = "col-12 mt-5 pr-5 pl-5">

      <div class="col-12 m-2 d-flex bd-highlight">
        <div class="flex-grow-1 bd-highlight"><!--flex-grow-1は要素を限界まで引き伸ばす-->
          <h4>ショッピングカート</h4>
        </div>
        <div class="mr-2 bd-highlight">
          <%= link_to "カートを空にする", all_destroy_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
        </div>
      </div>

      <div class="col-12">
        <table class = "table-bordered col-12">
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
          <% @cart_items.each do |cart_item| %>
            <tr class="text-center">
              <td><%= image_tag cart_item.item.get_item_image(80,80) %>    <%= cart_item.item.name %></td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <%= f.hidden_field :cart_item_id, :value => cart_item.id %>
                  <%= f.select :quantity, *[1..10] %>
                  <%= f.submit '変更', class: " btn btn-success" %>
                <% end %>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <td>
                <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

      <div class="col-12 d-flex bd-highlight">
        <div class="flex-grow-1 mt-3 bd-highlight">
          <%= link_to "買い物を続ける", root_path, class: "btn btn-info" %>
        </div>
        <table class = "table-bordered mt-3 bd-highlight">
          <tr>
            <th class="pt-3 pb-3 pr-5">合計金額</th>
            <td class="pt-3 pb-3 pl-5"><%= @total.round.to_s(:delimited) %></td>
        </table>
      </div>

      <div class="col-12 text-center pt-5">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
      </div>

    </div>
  </div>
</div>



