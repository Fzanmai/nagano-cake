<div class='container'>
   <div class "row">
     <div class = "mt-5">
       <h4>ショッピングカート</h4>
     </div>
     <div class = "mt-2">
       <%= link_to "カートを空にする", all_destroy_cart_items_path, method: :delete,class: "btn btn-danger btn-sm" %>
     </div>
   </div>
   <dev class "row">
     <div class>
       <table class = "table-bordered ml-4 mt-3">
         <tr>
           <th>
             商品名
           </th>
           <th>
             単価（税込）
           </th>
           <th>
             数量
           </th>
           <th>
             小計
           </th>
           <th>
           </th>
         </tr>
         <% @cart_items.each do |cart_item| %>
           <tr>
             <td>
               <%= cart_item.item.name %>
             </td>
             <td>
               <%= cart_item.item.add_tax_price %>
             </td>
             <td>
               <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
 	             <%= f.hidden_field :cart_item_id, :value => cart_item.id %>
 	             <%= f.select :quantity, *[1..10] %>
 	             <%= f.submit '変更', class: " btn btn-success" %>
               <% end %>
             <td>
               <%= cart_item.subtotal %>
             </td>
             <td>
               <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
             </td>
           </tr>
          <% end %>
       </table>
     </div>
   </div>
    <div class = "row">
     <table class = "table-bordered mt-3">
       <tr>
         <td>
           合計金額
         </td>
         <td>
           <%= @total.round.to_s(:delimited) %>
         </td>
     </table>
    </div>
    <div class = "row mt-3 ml-3">
       <%= link_to "買い物を続ける", root_path, class: "btn btn-info" %>
       <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
</div>



