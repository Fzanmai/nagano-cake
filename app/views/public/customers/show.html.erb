<div class "container">
  <div class "row">
    <div class="col-md-12 mt-5">

      <h2 class="ml-4 mt-3 col-4">マイページ</h2>
      <div class="d-flex bd-highlight">
        <h4 class="ml-5 mt-3">登録情報</h4>
        <div class="ml-4 mt-3">
          <%= link_to '編集する', edit_customer_path(@customer), class: "btn btn-sm btn-success" %>
        </div>
      </div>

      <table class = "table-bordered ml-5 mt-3 col-4">
        <tr>
          <td class="pt-2 pb-2">氏名</td>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="pt-2 pb-2">フリガナ</td>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="pt-2 pb-2">郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td class="pt-2 pb-2">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="pt-2 pb-2">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="pt-2 pb-2">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <div class="d-flex bd-highlight ml-5 mt-3">
        <h4 class="pr-4">配送先</h4>
        <div>
          <%= link_to '一覧を見る', shipping_addresses_path, class: "btn btn-sm btn-info" %>
        </div>
      </div>
      <div class="d-flex bd-highlight ml-5 mt-3">
        <h4 class="pr-4">注文履歴</h4>
        <div>
          <%= link_to '一覧を見る', orders_path, class: "btn btn-sm btn-info" %>
        </div>
      </div>

    </div>
  </div>
</div>

