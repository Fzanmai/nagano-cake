<h3 class="title font-weight-bold">商品一覧件)</h3>

<div class="row">
<% @items.each do |item| %>

<div class="row ml-4 mt-1">
<p>ジャンル機能が入る</p>

 <div class="col-3">
 　　<%= link_to item_path(item), style: "color:black;" do %>
              <p><%= image_tag item.item_image.variant(resize_to_fill: [200,200]) %></p>
              <p class="ml-1 text-bold"><strong><%= item.name %></strong></p>
              <% if item.is_active == true %>
                <p>¥<%= (item.with_tax_price).to_s(:delimited) %></p>
              <% else %>
                <p class="orange">売り切れ中</p>
              <% end %>
            <% end %>
          </div>
        <% end %>
       </div>
       <div class="mx-auto">
       <%= paginate @items %>
       </div>
       </div>
       </div>

