<p id="notice"></p>
<div class= "row text-center">
<div class = "col-md-8">
 <div class="row d-flex justify-content-center">
 	<div class="col-sm-3">
 	 <%= image_tag @item.get_item_image(300,300) %>
 </div>

 <div class="col-sm-5">
 	<h4><strong><%= @item.name %></strong></h4><br>
 	<p><%= @item.introduction %></p><br>
 	 <p><strong>￥<%= @item.add_tax_price.to_s(:delimited) %>円</strong>(税込)</p><br>
 	 <%= form_with model: @cart_items, url: cart_items_path, method: :post do |f| %>
 	 <%= f.hidden_field :item_id, :value => @item.id %>
 	 <p><%= f.select :amount, *[1..10], prompt: "個数選択" %><p/>
 	 <p><%= f.submit 'カートに入れる',class: " btn btn-success" %><p/>
   <% end %>

  <p><%= link_to "商品一覧に戻る",items_path, class: "btn btn-outline-secondary" %></p>
 </div>
</div>
</div>