<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">

      <h2>注文情報確認</h2>

      <div class="d-flex bd-highlight"><!--『cart_items』がないためエラーが起きる。未実装-->
        <table class="table-bordered">
          <tr class="table-secondary">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <!-- @cart_items.each do |cart| -->
            <tr>
              <td>例：チョコバナナミルフィーユ</td>
            <!-- cart.item.name --> <!-- 商品名 -->
              <td>例:11,000</td>
            <!-- (cart.item.price).to_s(:delimited) -->　<!-- 金額:税抜 -->
              <td>例：1</td>
            <!-- cart.quantity --> <!-- 個数 -->
              <td>例：11,000</td>
            <!-- (cart.item.price*cart.quantity).to_s(:delimited) --> <!-- 小計 -->
            </tr>
          <!-- end -->
        </table>

        <table class="table-bordered ml-4">
            <tr>
              <td class="table-secondary">送料</td>
              <td>例：800</td>
            </tr>
            <tr>
              <td class="table-secondary">例：1760</td>
              <td>例：11,000</td>
            </tr>
            <tr>
              <td class="table-secondary">請求金額</td>
              <td>例：2560</td>
            </tr>
        </table>
      </div>

      <div>
        <!-- @total.to_s(:delimited) --> <!-- お買い物の合計金額 -->
      </div>

      <h3>支払い方法</h3>
        <% if @new_order.payment_method == "card" %>
          <p>クレジットカード</p>
        <% else %>
          <p>銀行振込</p>
        <% end %>

      <h3>お届け先</h3>
        〒<%= @new_order.postal_code %>
        <%= @new_order.address %></br>
        <%= @new_order.name %>

      <%= form_with(model: @new_order, local: true) do |f| %>
        <div class="submit form-group">
          <%= f.submit '注文を確定する', class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
