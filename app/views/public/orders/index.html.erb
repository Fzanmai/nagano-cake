<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12 mt-5">

      <h2>注文履歴一覧</h2>

      <table class="table-bordered col-md-12">
        <tr class="table-secondary">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
          <% @order_details = order.order_details %>
          <tr>
            <td>
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td>
              〒<%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td>
              <% @order_details.each do |order_detail| %>
                <%= order_detail.item.name %></br>
              <% end %>
            </td>
            <td>
              <% @total = @order_details.inject(0) { |sum, order_detail| sum + order_detail.total } %>
              <%= @total.round.to_s(:delimited) %>円
            </td>
            <td><%= order.production_status_i18n %></td>
            <td>
              <a class="btn btn-outline-secondary btn-block" href="/orders/<%= order.id %>">表示する</a><!--ほんとはurlを『:id』にしなくてはいけない-->
            </td>
          </tr>
        <% end %>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
