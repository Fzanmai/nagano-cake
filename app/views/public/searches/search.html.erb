<% if @model == 'Item' %>
<h3>Items search for "<%= @content %>"</h3>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |item| %>
      <tr>
        <td> <%= image_tag item.get_item_image(200,200) %></td>
        <td><%= item.name %></td>
        <td><%= link_to "商品一覧に戻る",items_path, class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>