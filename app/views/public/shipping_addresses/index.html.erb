<h1>配送先登録/一覧</h1>
<%= form_with model: ShippingAddress.new do |f| %>

<p>郵便番号（ハイフンなし)</p>
<%= f.text_field :post_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :name %>

<%= f.submit '新規登録' %>

<% end %>
<table class='table'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @shipping_addresses.each do |shipping_address| %>
      <tr>
        <td><%= shipping_address.post_code %></td>
        <td><%= shipping_address.address %></td>
        <td><%= shipping_address.name %></td>
        <td><%= link_to '編集する', edit_shipping_address_path(shipping_address.id), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to '削除する', shipping_address_path(shipping_address.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger " %></td>
      </tr>
    <% end %>
  </tbody>
</table>